<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Paket Oluştur</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <ul>
                    @for (int i = 0; i < Model.Count(); i += 3)
                    {
                        <li>
                            @Html.CheckBox(Model[i].ProductId.ToString(), new { @class = "add-product" }) <span>@Model[i].ProductName</span>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-4">
                <ul>
                    @for (int i = 1; i < Model.Count(); i += 3)
                    {
                        <li>
                            @Html.CheckBox(Model[i].ProductId.ToString(), new { @class = "add-product" }) <span>@Model[i].ProductName</span>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-4">
                <ul>
                    @for (int i = 2; i < Model.Count(); i += 3)
                    {
                        <li>
                            @Html.CheckBox(Model[i].ProductId.ToString(), new { @class = "add-product" }) <span>@Model[i].ProductName</span>
                        </li>
                    }
                </ul>
            </div>
        </div>


        <div class="offset-md-2 col-lg-7">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Yeni Paket Oluştur</h1>
                </div>
                @using (Html.BeginForm("Create", "Package", FormMethod.Post, new { @id = "form", @class = "user", @enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true)


                    <div class="form-group row">
                        <div class="offset-md-1 col-md-10 ">
                            <input type="text" class="form-control " name="PackageName" id="package-name" placeholder="Paket Adı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-md-1 col-md-10 ">

                            <input type="number" class="form-control" name="PackagePrice" id="package-price" placeholder="Paket Fiyatı">
                        </div>
                    </div>

                    <div class="offset-md-3 col-md-6 ">
                        <button type="button" id="btn-create-package" class="btn btn-success btn-user btn-block">
                            Kaydet
                        </button>
                    </div>
                    <hr>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/CreatePackage.js"></script>