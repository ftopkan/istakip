@model Project.Entities.Models.AppUser
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-7">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Personel Düzenle</h1>
        </div>
        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { @id = "form", @class = "user", @enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)

            <input type="hidden" name="userId" value="@Model.Id" />
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input type="text" class="form-control form-control-user" name="FirstName" value="@Model.FirstName" id="exampleFirstName" placeholder="Ad">
                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control form-control-user" name="LastName" value="@Model.LastName" id="exampleLastName" placeholder="Soyad">
                </div>
            </div>
            <div class="form-group">
                <input type="email" class="form-control form-control-user" name="Email" value="@Model.Email" id="exampleInputEmail" placeholder="E-Posta Adresi">
            </div>
            <div class="form-group">
                <input type="text" class="form-control form-control-user" name="PhoneNumber" value="@Model.PhoneNumber" id="exampleInputPhoneNumber" placeholder="Telefon Numarası">
            </div>
            <div class="form-group">
                <input type="text" class="form-control form-control-user" name="Title" id="exampleInputTitle" placeholder="Ünvan">
            </div>
            <button type="submit" class="btn btn-success btn-user btn-block">
                Kaydet
            </button>
            <hr>
        }
    </div>
</div>

