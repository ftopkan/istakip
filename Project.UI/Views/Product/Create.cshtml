
@{
    ViewBag.Title = "Create";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_PersonnelLayout.cshtml";
    }
}

<div class="offset-md-2 col-lg-7">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Yeni Ürün Ekle</h1>
        </div>
        @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @id = "form", @class = "user", @enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)


            <div class="form-group row">
                <div class="offset-md-1 col-md-10 ">
                    <input type="text" class="form-control " name="ProductName" id="exampleFirstName" placeholder="Ürün">
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-1 col-md-10 ">

                    <input type="number" class="form-control" name="ProductPrice" id="examplePrice" placeholder="Fiyat">
                </div>
            </div>
           
            <div class="offset-md-3 col-md-6 ">
                <button type="submit" class="btn btn-success btn-user btn-block">
                    Kaydet
                </button>
            </div>
            <hr>
        }
    </div>
</div>