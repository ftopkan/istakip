
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string x = null;
}
<div class="offset-md-2 col-lg-7">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Yeni Talep Ekle</h1>
        </div>
        @using (Html.BeginForm("Create", "Demand", FormMethod.Post, new { @id = "form", @class = "user", @enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)


            <div class="form-group row">
                <div class="offset-md-1 col-md-10 ">
                    <input type="text" class="form-control " name="Title" id="exampleFirstName" placeholder="Başlık">
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-1 col-md-10 ">
                  
                    <textarea class="form-control" name="Description" id="exampleFormControlTextarea3" rows="4"></textarea>
                     </div>
                </div>
                <div class="form-group row">
                    <div class="offset-md-1 col-md-10 ">
                        <select class="form-control " name="UserId">
                            <option class="form-control" value="" selected> Personel Seç</option>
                            @foreach (var item in ViewBag.UserList)
                            {
                                <option class="form-control" value="@item.Id">@item.FirstName @item.LastName</option>

                            }
                        </select>
                    </div>
                </div>
                <div class="offset-md-3 col-md-6 ">
                    <button type="submit" class="btn btn-success btn-user btn-block">
                        Kaydet
                    </button>
                </div>
                <hr>
                }
            </div>
        </div>
           
            
