@model Project.Entities.Models.Order
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="offset-md-2 col-lg-7">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Yeni Talep Ekle</h1>
        </div>
        @using (Html.BeginForm("Create", "Order", FormMethod.Post, new { @id = "form", @class = "user", @enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)

            <div class="form-group row">
                <div class="offset-md-1 col-md-10 ">
                    <select class="form-control " name="PackageId">
                        <option class="form-control" value="" selected> Paket Seç</option>
                        @foreach (var item in ViewBag.Packages)
                        {
                            <option class="form-control" value="@item.PackageId">@item.PackageName</option>

                        }
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-md-1 col-md-10 ">
                    <input type="text" class="form-control " value="@Model.FullName" name="FullName"  placeholder="Adı Soyadı">
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-1 col-md-10 ">
                    <input type="tel" class="form-control " value="@Model.PhoneNumber" name="PhoneNumber"  placeholder="Telefon Numarası">
                </div>
            </div>
       
            <div class="form-group row">
                <div class="offset-md-1 col-md-10 ">

                    <textarea class="form-control" name="Adress" rows="4">value="@Model.Adress"</textarea>
                </div>
            </div>

            <div class="offset-md-3 col-md-6 ">
                <button type="submit" class="btn btn-success btn-user btn-block">
                    Kaydet
                </button>
            </div>
            <hr>
        }
    </div>
</div>


